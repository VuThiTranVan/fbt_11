<% if object.errors.full_messages.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t("users.signup.errors_msg",
        count_error: pluralize(object.errors.size, "error")) %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
