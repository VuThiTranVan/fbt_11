<header>
  <div class="navbar navbar-default navbar-static-top navbar-fixed-top custom-nav navbar-inverse">
    <div class="navbar-header">
    </div>
    <div class="navbar-collapse collapse ">
      <ul class="nav navbar-nav">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), "#" %></li>
        <li><%= link_to t(".contact"), "#" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_user.avatar.url,
              size: Settings.user.avatar_size_display%>
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".signup"), signup_path %></li>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
