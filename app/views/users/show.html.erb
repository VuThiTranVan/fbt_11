<!-- <div class="container"> -->
    <h1><%= t ".header" %></h1>
    <hr>
  <div class="row">
      <!-- left column -->
    <div class="col-md-3">
      <div class="text-center">
        <%= image_tag current_user.avatar.url,
          size: Settings.user.profile_avatar,
          class: "avatar img-circle" %>
      </div>
    </div>
    <!-- info column -->
    <div class="col-md-5 personal-info">
      <div class="panel panel-info">
        <table class="table table-striped table-hover table-responsive">
          <tr>
            <th><%= t ".name" %></th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th><%= t ".email" %></th>
            <td><%= current_user.email %></td>
          </tr>
          <tr>
            <th><%= t ".phone" %></th>
            <td><%= current_user.telphone %></td>
          </tr>
          <tr>
            <th><%= t ".address" %></th>
            <td><%= current_user.address %></td>
          </tr>
          <tr>
            <td colspan="2" class="text-right">
              <%= link_to t(".edit"), edit_user_path(current_user), class: "btn btn-primary" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
<!-- </div> -->
<hr>
