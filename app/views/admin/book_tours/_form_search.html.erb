<div class="border_center row">
  <%= form_tag admin_book_tours_path, method: :get, remote: :true do %>
    <div class="col-md-3">
      <%= label_tag t ".status" %>
      <%= select_tag :status_eq,
        options_for_select(load_status, params[:status_eq]),
        include_blank: t(".all_status") ,class: "form-control" %>
    </div>
    <div class="input-daterange">
      <div class="col-md-4">
        <%= label_tag t ".start_date" %>
        <%= date_field_tag :created_at_gteq,
          params[:created_at_gteq], class: "form-control datepicker" %>
      </div>
      <div class="col-md-4">
        <%= label_tag t ".end_date" %>
        <%= date_field_tag :created_at_lteq,
          params[:created_at_lteq], class: "form-control datepicker" %>
      </div>
    </div>
    <div class="row paginate-center">
      <%= submit_tag t(".btn_search"), class: "margin_top_20 btn btn-primary" %>
    </div>
  <% end %>
</div>
