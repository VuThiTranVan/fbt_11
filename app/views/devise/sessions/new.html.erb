<div class="container">
  <div class="card card-container">
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>

    <%= form_for resource, as: resource_name,
      url: session_path(resource_name) do |f| %>
      <span id="reauth-email" class="reauth-email"></span>
      <%= f.label t "users.email" %>
      <%= f.email_field :email, class: "form-control", autofocus: true %>

      <%= f.label t "users.password" %>
      <%= f.password_field :password, autocomplete: "off",
        class: "form-control", required: true %>
      <div id="remember" class="checkbox">
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t("users.login.remember_me") %></span>
          <% end %>
        </div>
      <% end %>
      <%= f.submit t("users.login.btn_login"), class: "btn btn-primary btn-block" %>
      <%= link_to t("users.login.forgot_password"), "#", class: "forgot-password" %>
    <% end %>

  </div>
</div>
